sales <- data.frame(
  branch = c("A", "A", "B", "B", "C", "C"),
  quarter = c("Q1", "Q2", "Q1", "Q2", "Q1", "Q2"),
  revenue = c(200, 220, 180, 170, 210, 215)
)

#Q. 지점별 평균 매출을 구하고, 이 중 평균 매출이 가장 낮은 지점을 찾아 출력하시오.
sales %>%
  group_by(branch) %>%
  summarise(mean_revenue = mean(revenue)) %>%
  ungroup() %>%  # 이 줄이 중요
  slice_min(mean_revenue)
