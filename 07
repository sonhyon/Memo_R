service_data <- data.frame(
  customer_id = 1:30,
  avg_daily_time = round(runif(30, 0.5, 5.0), 1),      # 일평균 접속 시간 (시간)
  services_used = sample(1:6, 30, replace = TRUE),     # 사용 중인 서비스 수
  satisfaction = sample(1:5, 30, replace = TRUE)       # 만족도 (1~5 Likert scale)
)
head(service_data)


#Q.고객의 일평균 접속 시간과 이용 서비스 수가 만족도에 유의미한 영향을 미치는지 분석하시오
model <- lm(satisfaction ~ avg_daily_time + services_used, data = service_data)
summary(model)

ggplot(service_data, aes(x = services_used, y = satisfaction)) +
  geom_jitter(width = 0.2, height = 0.2) +                               #데이터 포인트들을 조금씩 흩뜨려서 찍어줌 (산점도 변형)
  geom_smooth(method = "lm", se = TRUE) +                                #산점도 위에 회귀선을 그림
  labs(title = "서비스 수 vs 만족도", x = "서비스 수", y = "만족도") +
  theme_minimal()
