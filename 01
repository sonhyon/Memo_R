library(ggplot2)
head(mpg)

#Q. mpg 데이터를 활용하여 구동 방식(drv)과 자동차 클래스(class)에 따른 고속도로 연비(hwy)의 평균 차이를 비교하고 시각화하세요.
df <- mpg %>%
  group_by(drv, class) %>%
  summarise(mean_hwy = mean(hwy))

ggplot(df, aes(x = class, y = mean_hwy, fill = drv)) +
  geom_col(position = "dodge") +
  labs(title = "구동방식과 자동차 클래스별 고속도로 연비",
       x = "자동차 클래스",
       y = "평균 고속도로 연비") +
  theme_minimal()

