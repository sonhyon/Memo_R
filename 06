# 패키지 로드
library(ggplot2)
library(dplyr)

# 데이터 준비
mpg <- as.data.frame(ggplot2::mpg)
head(mpg)


#Q. mpg 데이터셋을 이용해 제조사별로 평균 도시 연비가 가장 높은 차량 종류(class)를 찾아보세요.
mpg %>%
  group_by(manufacturer, class) %>%
  summarise(mean_cty = mean(cty), .groups = "drop") %>%
  group_by(manufacturer) %>%
  slice_max(mean_cty) 
